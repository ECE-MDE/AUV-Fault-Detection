#===============================================================================
# Autonomous Vehicle Library
#
# Description: Configuration file for the Tail Junction Board node.
#===============================================================================

# Fin settings -----------------------------------------------------------------

# Fin reset time in seconds. If the node goes this many seconds without
# receiving a fins message, the fins will be reset to their home positions
fin_reset_duration: 1.0

# Settings for each fin
# - home_angle: home/default angle for the fin in degrees
# - min_angle: maximum (positive) angle for the fin in degrees
# - max_angle: minimum (negative) angle for the fin in degrees

port:
    home_angle: 20.0
    min_angle: -20.0
    max_angle: 20.0

starboard:
    home_angle: -20.0
    min_angle: -20.0
    max_angle: 20.0

top:
    home_angle: 0.0
    min_angle: -20.0
    max_angle: 20.0

bottom:
    home_angle: 0.0
    min_angle: -20.0
    max_angle: 20.0

# Serial port settings ---------------------------------------------------------
serial:

    # Serial port name the device is connected to
    port_name: "/dev/tail_junction"

    # Serial baud rate in bits per second
    baudrate: 921600

    # Serial read timeout in milliseconds
    read_timeout: 5000

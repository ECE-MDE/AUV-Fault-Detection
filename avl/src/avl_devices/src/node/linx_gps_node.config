#===============================================================================
# Autonomous Vehicle Library
#
# Description: Configuration file for the Linx GPS node.
#===============================================================================

# Position fix interval in ms
fix_interval: 100

# NMEA mesasge rate dividers. Outputs one message for every N position fixes
gll_div: 0
rmc_div: 10
vtg_div: 0
gga_div: 10
gsa_div: 0
gsv_div: 0
zda_div: 10

# Serial port settings ---------------------------------------------------------
serial:

    # Serial port name the device is connected to
    port_name: "/dev/gps"

    # Serial baud rate in bits per second
    baudrate: 9600

    # Serial read timeout in milliseconds
    read_timeout: 10

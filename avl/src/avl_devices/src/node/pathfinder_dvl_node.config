#===============================================================================
# Autonomous Vehicle Library
#
# Description: Configuration file for the Pathfinder DVL node.
#===============================================================================

# Water salinity in ppt (0 to 40)
# Note: MUST BE AN INTEGER!
salinity: 0

# Sensor frame to body frame rotation matrix
R_s_b:   [ -0.707106781186548, 0.707106781186548,  0.0,
            0.707106781186548, 0.707106781186548,  0.0,
            0.0,               0.0,               -1.0 ]

# Pathfinder DVL reports v_err as an error estimate for velocity measurements.
# Mark any measurements with abs(v_err) greater than this value as invalid
err_cutoff: 0.1

# Serial port settings ---------------------------------------------------------
serial:

    # Serial port name the device is connected to
    port_name: "/dev/dvl"

    # Serial baud rate in bits per second
    baudrate: 115200

    # Serial read timeout in milliseconds
    read_timeout: 5000
